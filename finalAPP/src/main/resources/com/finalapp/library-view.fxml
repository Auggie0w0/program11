<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.finalapp.LibraryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox spacing="10">
        <TextField fx:id="titleField" promptText="Book Title"/>
        <TextField fx:id="authorField" promptText="Author"/>
        <TextField fx:id="pagesField" promptText="Total Pages"/>
        <Button text="Add Book" onAction="#onAddBookClick"/>
    </HBox>

    <TableView fx:id="bookTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title"/>
            <TableColumn fx:id="authorColumn" text="Author"/>
            <TableColumn fx:id="progressColumn" text="Progress"/>
        </columns>
    </TableView>

    <VBox fx:id="bookDetailsPane" spacing="10">
        <Label text="Reading Progress"/>
        <TextField fx:id="pagesReadField" promptText="Pages Read"/>
        <TextArea fx:id="notesArea" promptText="Notes" VBox.vgrow="ALWAYS"/>
        <Button text="Update" onAction="#onUpdateClick"/>
    </VBox>
</VBox> 